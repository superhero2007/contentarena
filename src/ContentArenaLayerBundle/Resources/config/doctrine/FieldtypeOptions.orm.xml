<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ContentArenaLayerBundle\Entity\FieldtypeOptions" table="fieldtype_options">
    <indexes>
      <index name="value" columns="value,fields_id"/>
      <index name="sort" columns="sort,fields_id"/>
      <index name="title_value" columns="title,value"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="title" columns="title,fields_id"/>
    </unique-constraints>
    <id name="fieldsId" type="integer" column="fields_id"/>
    <id name="optionId" type="integer" column="option_id"/>
    <field name="title" type="text" column="title" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="value" type="string" column="value" length="250" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="sort" type="integer" column="sort" nullable="false">
      <options>
        <option name="unsigned">1</option>
      </options>
    </field>
  </entity>
</doctrine-mapping>
