    <script>
        purechatApi.on('chatbox:ready', function () {
            // values - 'bottomLeft', 'bottomRight', 'topLeft', and 'topRight'

            // Makes the chatbox become docked to bottom-left side of screen
            purechatApi.set('chatbox.position', 'bottomLeft');
        });
    </script>

{% endblock %}
