{% extends "layout.html.twig" %}

{% block stylesheets %}

    {{ parent() }}

{% endblock %}

{% block main_content %}

    {# REACT CONTAINER#}
    <div class="row marketplace-container"
         data-logged-user="{{ loggedUser }}"
         data-test-stage-mode="{{ testStageMode }}"
         data-logged-user-data="{{ loggedUserData }}"
         data-rights="{{ rights }}"
         data-is-owner="{{ isOwner }}"
         data-total-countries="{{ totalCountries }}"
         data-company="{{ company }}"
         data-packages="{{ packages }}"
         data-referer-email="{{ refererEmail }}"
         data-referer-listing-id="{{ refererListingId }}"
         data-new-listing="{{ newListing }}"
         data-env-host-url="{{ path('homepage')}}"
         id="home-wrapper">
    </div>

{% endblock main_content %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('assets/main.js') }}"></script>
