<div class="filters">
    <button class="filter select-territories" ref="#filter-territories"><span class="filter-territories-count"></span><span>Territories</span></button>
    <button class="filter select-sports" ref="#filter-sports"><span class="filter-sports-count"></span><span>Sport</span></button>
    <button class="filter select-rights" ref="#filter-rights"><span class="filter-rights-count"></span><span>Rights</span></button>
    <button class="filter select-timing" ref="#filter-timing"><span>Timing</span></button>
    {#<button class="filter btn" id="moreFilters">More Filters</button>#}

    <form role="form" action="{{ path('buy') }}" method="GET">
        <input type="text" id="inputSearch" name="inputSearch" placeholder="Search"/>
    </form>

</div>

<button id="show-save-filter">Save filter</button>

<div class="is-hidden" id="save-filter-container">
    <input type="text" placeholder="Filter Name" id="filter-name">
    <button id="save-filter">Save</button>
</div>

<div >
    <select name="searchList" id="saved-filters">
        <option value="" selected>Select saved filter</option>
        {% for list in lists %}
            <option value="{{ list.id }}">{{ list.name }}</option>
        {% endfor %}
    </select>
    <button id="apply-saved-filter">Apply Filter</button>
</div>


<div id="filter-territories" class="is-hidden">
    <div class="subfilter-container">
        {% for territory in territories %}
            <div class="territory subfilter" id="territory-{{ territory.id }}" toggle>{{ territory.name }}</div>
        {% endfor %}
    </div>

    <div class="subfilter-container country-list">
        {% for country in countries %}
            <div class="country subfilter territory-{{ country.territory.id }} is-hidden" id="country-{{ country.id }}">
                {{ country.name }}
            </div>
        {% endfor %}
    </div>

    <div class="subfilter-container">
        <button class="action close" ref="#filter-territories" clear=".territory, .country">Cancel</button>
        <button class="action apply" data-type="territory" ref="#filter-territories">Apply</button>
    </div>

</div>

<div id="filter-sports" class="is-hidden">

    <div class="subfilter-container">
    </div>

    <div class="subfilter-container">
        <button class="action close" ref="#filter-sports" clear=".territory, .country">Cancel</button>
        <button class="action apply" data-type="sport" ref="#filter-sports">Apply</button>
    </div>

</div>

<div id="filter-rights" class="is-hidden">
    <div class="subfilter-container">
        {% for right in rights %}
            <div class="right subfilter" id="right-{{ right.id }}" toggle>{{ right.name }}</div>
        {% endfor %}
    </div>

    <div class="subfilter-container">
        <button class="action close" ref="#filter-rights" clear=".territory, .country">Cancel</button>
        <button class="action apply"  data-type="right" ref="#filter-rights">Apply</button>
    </div>

</div>

<div id="filter-timing" class="is-hidden">
    From: <input type="text" id="startDate"> to: <input type="text" id="endDate">
    <div class="subfilter-container">
        <button class="action close" ref="#filter-timing" clear=".territory, .country">Cancel</button>
        <button class="action apply"  data-type="timing" ref="#filter-timing">Apply</button>
    </div>

</div>
