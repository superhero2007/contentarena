<div class="right uk-margin-small-top">
    <form action="{{ path('contentPlaceBid') }}" method="post">
        <input type="hidden" name="content-id" value="{{ content.id }}">
        <input type="hidden" name="content-data" value="" id="content-data">
        <input type="hidden" name="custom-id" value="{{ content.customId }}">
        <button class="uk-width-1-1 uk-button uk-button-primary license-btn">Continue with license agreement</button>
    </form>
</div>

<div class="right uk-margin-small-top">
    {% for msg in app.flashes('success') %}
        <div class="uk-alert uk-alert-success flash-message">
            {{ msg }}
        </div>
    {% endfor %}
</div>

