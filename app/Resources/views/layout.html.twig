<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        {% block stylesheets %}
            <link href="{{ asset('assets/vendor.css') }}?v=1" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/app/css/font-awesome.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('bundles/app/css/jquery-ui.theme.css') }}" type="text/css" rel="stylesheet" />
            <link href="{{ asset('assets/common.css') }}?v=1" type="text/css" rel="stylesheet" />
            <link href="{{ asset('assets/main.css') }}?v=1" type="text/css" rel="stylesheet" />
        {% endblock %}

        <script>
            var envhosturl = "{{ path('homepage')|escape('js') }}";

            {% if hostUrl is defined %}
                var hosturl = "{{ hostUrl }}";
            {% endif %}

            {% if externalApiUrl is defined %}
                var externalApiUrl = "{{ externalApiUrl }}";
            {% endif %}


            var assetsBaseDir = "{{ asset('bundles/') }}";
        </script>
        <title>Content Arena</title>

    </head>
    <body class="page-home">

        <div class="main-content">
            {% block main_content %}
            {% endblock main_content %}
        </div>

    {% block javascripts %}

        <script type="text/javascript" src="{{ asset('assets/manifest.js') }}?v=1"></script>
        <script type="text/javascript" src="{{ asset('assets/vendor.js') }}?v=1"></script>
        <script type="text/javascript" src="{{ asset('assets/main.js') }}?v=1"></script>
        <script type="text/javascript" src="{{ asset('assets/common.js') }}?v=1"></script>
        <script type="text/javascript" src="{{ asset('assets/ca.js') }}?v=1"></script>

    {% endblock %}
    </body>
</html>
