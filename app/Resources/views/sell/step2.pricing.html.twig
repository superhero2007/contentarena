<div id="sales-package-1" class="seller-box sales-package">
    <div class="seller-box-title">
        Pricing and territory
    </div>
    <div class="close-box">
        <i class="fa fa-window-close"></i>
    </div>
    <div class="seller-box-content">
        <div class="box-item" id="sales-method-selector">

            <div class="select-box-item-title">
                Sales method
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox"
                           value="pre-defined-fee"
                           show=".predefined-fee-option"
                           hide=".price-optional"
                           class="unselect-others toggler-checkbox">
                </div>
                <div class="select-box-item-label">
                    Pre-defined fee
                </div>
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="open-bid"
                           show=".bid-option"
                           hide=".price-optional"
                           class="unselect-others toggler-checkbox">
                </div>
                <div class="select-box-item-label">
                    Open bid
                </div>
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="closed-bid"
                           show=".bid-option, .closed-bid-option"
                           hide=".price-optional"
                           class="unselect-others toggler-checkbox" >
                </div>
                <div class="select-box-item-label">
                    Closed bid
                </div>
            </div>
        </div>

        <div class="box-item price-optional predefined-fee-option bid-option">
            <div class="select-box-item-title price-optional predefined-fee-option">
                Fee
            </div>

            <div class="select-box-item select-box-item-full price-optional predefined-fee-option">
                <div class="select-box-checkbox">

                </div>
                <div class="select-box-item-label">
                    <input type="text" id="fee-selector" class="small-input" >
                </div>
            </div>

            <div class="select-box-item-title price-optional bid-option">
                Minimum bid
            </div>

            <div class="select-box-item select-box-item-full price-optional bid-option">
                <div class="select-box-checkbox">

                </div>
                <div class="select-box-item-label">
                    <input type="text" id="bid-selector" class="small-input" >
                </div>
            </div>

        </div>

        {# CURRENCY SELECTOR#}
        <div class="box-item price-optional predefined-fee-option bid-option" id="fee-selector">
            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="USD" class="unselect-others">
                </div>
                <div class="select-box-item-label">
                    USD
                </div>
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="EUR" class="unselect-others">
                </div>
                <div class="select-box-item-label">
                    EUR
                </div>
            </div>
        </div>


        {# TERRITORY #}
        <div class="box-item" id="territories-selector">
            <div class="select-box-item-title">
                Territories
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="worldwide"  class="unselect-others">
                </div>
                <div class="select-box-item-label">
                    Worldwide
                </div>
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="selected" class="unselect-others">
                </div>
                <div class="select-box-item-label">
                    Selected territories only <select type="text" id="territory-selected" data-placeholder="Choose a Country..." multiple></select>
                </div>
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="excluded" class="unselect-others">
                </div>
                <div class="select-box-item-label">
                    Worldwide excluding <select type="text" id="territory-excluded" data-placeholder="Choose a Country..." multiple></select>
                </div>
            </div>
        </div>

        {# PACKAGE #}
        <div class="box-item">
            <div class="select-box-item-title">
                Package Configuration
            </div>

            <div class="select-box-item select-box-item-full ">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="territories-as-package" >
                </div>
                <div class="select-box-item-label">
                    Sell territories as package
                </div>
            </div>

            <div class="select-box-item select-box-item-full price-optional closed-bid-option">
                <div class="select-box-checkbox">
                    <input type="checkbox" value="territories-bids">
                </div>
                <div class="select-box-item-label">
                    Allow individual bids on territories
                </div>
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-item-label box-item-checkbox-list">
                    <input type="text" placeholder="Enter package name" class="sales-package-name">
                </div>
            </div>

            <div class="select-box-item select-box-item-full">
                <div class="select-box-item-label box-item-checkbox-list">
                    <button class="small-button" id="add-sales-package">Add sales package</button>
                </div>
            </div>
        </div>

    </div>
</div>