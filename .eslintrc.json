{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "$": "readonly",
        "jQuery": "readonly",
        "ContentArena": "readonly",
        "envhosturl": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-unresolved": [
            "error",
            {
                "ignore": [ "@constants", "@components", "@utils", "@translations" ]
            }
        ],
        "import/no-named-as-default": "off",
        "no-unused-vars": "off",
        "no-restricted-syntax": "off",
        "prefer-spread": "off",
        "no-lone-blocks": "off",
        "eqeqeq": "off",
        "no-console": "off",
        "no-return-assign": "off",
        "func-names": "off",
        "no-unused-expressions": "off",
        "no-use-before-define": "off",
        "no-prototype-builtins": "off",
        "camelcase": "off",
        "no-undef": "off",
        "no-useless-constructor": "off",
        "no-return-await": "off",
        "prefer-const": "off",
        "no-useless-escape": "off", //No need to fix
        "no-plusplus": "off",
        "array-callback-return": "off",
        "no-nested-ternary": "off",
        "prefer-destructuring": "off",
        "no-mixed-operators": "off",
        "class-methods-use-this": "off",
        "no-restricted-globals": "off",
        "no-shadow": "off",
        "no-case-declarations": "off",
        "no-param-reassign": "off",
        "consistent-return": "off", //No need to fix
        "max-len": "off",
        "no-underscore-dangle": "off",
        "import/prefer-default-export": "off",
        "import/no-unresolved": "off",
        "import/no-duplicates": "off",
        "import/no-named-default": "off",
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": false, "peerDependencies": false}],
        "import/no-named-as-default-member": "off",
        "react/destructuring-assignment": "off",
        "react/no-access-state-in-setstate": "off",
        "react/forbid-prop-types": "off",
        "react/no-unused-state": "off",
        "react/no-string-refs": "off",
        "react/no-unescaped-entities": "off",
        "react/no-multi-comp": "off",
        "react/sort-comp": "off",
        "react/jsx-filename-extension": "off", //No need to fix
        "react/prefer-stateless-function": "off",
        "react/prop-types": "off",
        "react/jsx-no-target-blank": "off",
        "react/no-unused-prop-types": "off",
        "react/require-default-props": "off",
        "react/no-array-index-key": "off",
        "react/button-has-type": "off",
        "react/no-this-in-sfc": "off",
        "react/jsx-closing-tag-location": "off",
        "react/default-props-match-prop-types": "off",
        "jsx-a11y/no-noninteractive-element-interactions": "off",
        "jsx-a11y/label-has-for": "off",
        "jsx-a11y/click-events-have-key-events": "off",
        "jsx-a11y/alt-text": "off",
        "jsx-a11y/label-has-associated-control": "off",
        "jsx-a11y/aria-role": "off",
        "jsx-a11y/anchor-is-valid": "off",
        "jsx-a11y/mouse-events-have-key-events": "off",
        "jsx-a11y/no-autofocus": "off",
        "jsx-a11y/no-static-element-interactions": "off",
        "indent": [2, "tab", { "ObjectExpression": 1 }],
        "no-tabs": 0,
        "no-mixed-spaces-and-tabs": 0,
        "react/jsx-one-expression-per-line" : 0,
        "react/jsx-indent": [2, "tab", {"checkAttributes": false}],
        "react/jsx-indent-props" : [2, "tab"],
        "quotes": ["error", "double"]
    }
}
